{
  "SDKVersion": 2,
  "Author": "GenericMale",
  "CodePath": "plugin/index.html",
  "Description": "Control your Sonos Speakers.",
  "Name": "Sonos",
  "Icon": "sonos",
  "URL": "https://github.com/GenericMale/streamdeck-spotify",
  "Version": "1.0.0",
  "Category": "Sonos",
  "CategoryIcon": "images/plugin_category",
